@model Candidate

<div class="display-6">
    Apply
</div>

<form>
    <div class="form-group my-2">
        <label>Email</label>
        <input name="Email" class="form-control"/> 
    </div>
    <div class="form-group my-2">
        <label>First Name</label>
        <input name="FirstName" class="form-control"/>
    </div>
    <div class="form-group my-2">
        <label>Last Name</label>
        <input name="LastName" class="form-control"/>
    </div>

    <div class="form-group my-2">
        <label>Age</label>
        <select class="form-control" name=Age">
            <option value="18">18</option>
            <option value="19">19</option>
            <option value="20">20</option>
            <option value="21">21</option>
            <option value="22">22</option>
            <option value="23">23</option>
        </select>
    </div>

    <fieldset>
        <legend>Select One Course</legend>
        <p>
            <input id="mvc" type="radio" name="SelectedCourse" value="mvc" />
            <label for="mvc">MVC</label>
        </p>
        <p>
            <input id="angular" type="radio" name="SelectedCourse" value="angular" />
            <label for="angular">Angular</label>
        </p>

        <p>
            <input id="react" type="radio" name="SelectedCourse" value="react" />
            <label for="react">React</label>
        </p>

    </fieldset>


    <div>
        <button type="submit" class="btn btn-primary">Apply</button>
        <a class="btn btn-warning" href="/Home">Home</a>
  </div>


</form>
    
