@model Candidate

<div class="display-6">
    Apply
</div>

<form method="post" asp-controller="Course" asp-action="Apply">
    <div class="form-group my-2">
        <label asp-for="Email">Email</label>
        <input asp-for="Email" class="form-control" />
    </div>
    <div class="form-group my-2">
        <label asp-for="FirstName">First Name</label>
        <input asp-for="FirstName" class="form-control" />
    </div>
    <div class="form-group my-2">
        <label asp-for="LastName">Last Name</label>
        <input asp-for="LastName" class="form-control" />
    </div>

    <div class="form-group my-2">
        <label asp-for="Age">Age</label>
        <select class="form-control" asp-for="Age">
            <option value="18">18</option>
            <option value="19">19</option>
            <option value="20">20</option>
            <option value="21">21</option>
            <option value="22">22</option>
            <option value="23">23</option>
        </select>
    </div>

    <fieldset>
        <legend>Select One Course</legend>
        <p>
            <input id="mvc" type="radio" asp-for="SelectedCourse" value="MVC" />
            <label for="mvc">MVC</label>
        </p>
        <p>
            <input id="angular" type="radio" asp-for="SelectedCourse" value="Angular" />
            <label for="angular">Angular</label>
        </p>

        <p>
            <input id="react" type="radio" asp-for="SelectedCourse" value="React" />
            <label for="react">React</label>
        </p>

    </fieldset>


    <div>
        <button type="submit" class="btn btn-primary">Apply</button>
        <a class="btn btn-warning" asp-asp-controller="Home" asp-action="Index">Home</a>
    </div>


</form>
