@model IEnumerable<ProductListIndexDto>


<div class="text-center">
    <div class="display-6">Products</div>

    <div class="d-flex justify-content-end mt-3">
        <a class="btn btn-outline-success" asp-area="Admin" asp-controller="Product" asp-action="Create">
            <i class="fas fa-plus"></i>
            Create
            </a>
    </div>


    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Product Name</th>
                <th>Price</th>
                <th>Category</th>
                <th>Operations</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                    <td>@item.Price</td>
                    <td>@item.CategoryName</td>
                    <td>
                        <a class="btn btn-warning" asp-action="Update" asp-route-id="@item.Id">
                            <i class="fa fa-edit"></i>Edit</a> |
                        <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">
                            <i class="fa fa-trash"></i>
                            Delete
                        </a>

                        <a class="btn btn-info" target="_blank" asp-area="" asp-controller="Product" asp-action="Get" asp-route-id="@item.Id">
                            <i class="fa fa-search"></i>Web</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>