@model ProductDtoForInsertion

<div class="text-center">
    <div class="display-6">Create Product</div>
</div>

<form method="post" asp-area="Admin" asp-controller="Product" asp-action="Create" enctype="multipart/form-data">

    <div class="text-danger" asp-validation-summary="All"></div>

    <div class="form-group my-3">
        <label asp-for="CategoryId"></label>
        <select asp-for="CategoryId" asp-items="@ViewBag.Categories" class="form-control"></select>

    </div>
    <div class="form-group my-3">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" placeholder="Product Name" />
    </div>

    <div class="form-group my-3">
        <label asp-for="Summary"></label>
        <input asp-for="Summary" class="form-control" placeholder="Summarry" />
    </div>

    <div class="form-group my-3">
        <label asp-for="Price"></label>
        <input asp-for="Price" class="form-control" placeholder="Product Price" />
    </div>

    <div class="form-group my-3">
        <label asp-for="ImageUrl"></label>
        <input name="file" type="file" class="form-control" placeholder="Product Price" />
    </div>

    <div class="form-group my-3">
        <div class="btn-group">
            <button type="submit" class="btn btn-primary">
                <i class="fas fa-save"></i>
                Save
            </button>

            <a asp-action="Index" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i>
                Back to List
            </a>

        </div>

    </div>
</form>