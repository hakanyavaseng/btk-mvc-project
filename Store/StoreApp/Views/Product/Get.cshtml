@model Product

<div class="row">
    <div class="col-md 12">
        <div class="text-center">
            <h6 class="display-6">
                @Model.Name
            </h6>

            <img class="img-fluid shadow rounded-3 my-3" width="600" height="600" src="@Model?.ImageUrl" alt="@Model.Name" />

            <p class="lead text-danger">@Model.Price.ToString("c")</p>

            <div class="btn-group">
                <a class="btn btn-primary" asp-controller="Home" asp-action="Index">
                    <i class="fa-solid fa-house"></i>
                    Home
                </a>

                <form id="@Model.Id" asp-page="/cart" method="post">
                    <input type="hidden" asp-for="Id" />
                    <input type="hidden" name="returnUrl" value="@ViewContext.HttpContext.Request.PathAndQuery()" />
                    <button type="submit" class="btn btn-outline-primary mx-2">
                        <i class="fa-solid fa-cart-shopping"></i>
                        Add to Cart
                    </button>
                </form>


                <a class="btn btn-outline-primary" asp-controller="Product" asp-action="Index">
                    <i class="fa-solid fa-list"></i>
                    Products
                </a>
               
            </div>


        </div>


    </div>
</div>



