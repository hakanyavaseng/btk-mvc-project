@model Order
<div class="text-danger" asp-validation-summary="All">

</div>
<form method="post" asp-action="Checkout">
    <div class="form-group">
        <label asp-for="Name">Name</label>
        <input type="text" class="form-control" asp-for="Name" placeholder="Enter name">
    </div>
    <div class="form-group">
        <label asp-for="Line1"></label>
        <input type="text" class="form-control" asp-for="Line1">
    </div>
    <div class="form-group">
        <label asp-for="Line2"></label>
        <input type="text" class="form-control" asp-for="Line2">
    </div>
    <div class="form-group">
        <label asp-for="Line3"></label>
        <input type="text" class="form-control" asp-for="Line3">
    </div>

    <div class="form-group">
        <label asp-for="City"></label>
        <input type="text" class="form-control" asp-for="City">
    </div>
    <div class="form-group">
        <input asp-for="GiftWrap">
        <label>Gift Wrap</label>
    </div>

    <div class="text-center">
        <button type="submit" class="btn btn-success">Submit Order</button>
    </div>

</form>