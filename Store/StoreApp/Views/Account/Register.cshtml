@model RegisterDto

<div class="text-center my-3">
    <i class="fa-solid text-white fa-user-plus bg-secondary p-3 rounded-5"></i>
    <h6 class="display-6">
        Register
    </h6>
</div>

<div class="row">
    <div class="col-md-3"></div>
    <div class="col-md-6">
        <form method="post" asp-controller="Account" asp-action="Register">
            <div class="text-center">
                <div class="text-danger" asp-validation-summary="All"></div>
            </div>

            <div class="form-group my-3">
                <label asp-for="UserName">User Name</label>
                <input type="text" asp-for="UserName" class="form-control" />
            </div>
            <div class="form-group my-3">
                <label asp-for="Email"></label>
                <input type="email" asp-for="Email" class="form-control" />
            </div>
            <div class="form-group my-3">
                <label asp-for="Password"></label>
                <input type="password" asp-for="Password" class="form-control" />
            </div>
            <div class="form-group my-3">
                <label asp-for="PasswordConfirm">Password Confirm</label>
                <input type="password" asp-for="PasswordConfirm" class="form-control" />
            </div>
            <div class="form-group my-3  d-flex justify-content-center">
                <button type="submit" class="btn btn-primary"><i class="fa-solid fa-right-to-bracket mx-2"></i>Register</button>
            </div>
        </form>
    </div>
    <div class="col-md-3"></div>
</div>



